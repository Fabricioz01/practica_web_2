generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("POSTGRES_URL")
}
model Local {
  idLocal     Int      @id @default(autoincrement())
  idCiudad    Int
  idAlquiler  Int
  nombre      String
  direccion   String
  capacidad   Int
  descripcion String

  // Relaci贸n con Ciudad
  ciudad      Ciudad   @relation(fields: [idCiudad], references: [idCiudad])

  // Relaci贸n con Alquiler
  alquiler    Alquiler @relation(fields: [idAlquiler], references: [idAlquiler])
}

model Ciudad {
  idCiudad Int    @id @default(autoincrement())
  nombre   String

  // Relaci贸n inversa con Local
  locales  Local[]
}

model Alquiler {
  idAlquiler   Int    @id @default(autoincrement())
  precio       Float
  fechaInicio  DateTime
  fechaFin     DateTime

  // Relaci贸n inversa con Local
  locales      Local[]
}
